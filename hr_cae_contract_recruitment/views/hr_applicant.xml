<odoo>

    <record id="view_applicant_form" model="ir.ui.view">
        <field name="name">hr.applicant.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='job_position']" position="inside">
                <field name="currency_id" groups="base.group_multi_currency" />
                <label for="turnover_minimum"/>
                <div>
                    <field name="turnover_minimum" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
