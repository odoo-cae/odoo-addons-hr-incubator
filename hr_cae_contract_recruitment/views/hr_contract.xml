<odoo>
    <record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr_contract_view_form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='hourly_wage']/.." position="after">
                <label for="turnover_minimum"/>
                <div class="o_row" name="turnover_minimum">
                    <field name="currency_id" groups="base.group_multi_currency" />
                    <field name="turnover_minimum" widget="monetary" options="{'currency_field': 'currency_id'}" nolabel="1"/>
                    <span>/ month</span>
                </div>
            </xpath>

        </field>
    </record>

<!-- TODO : ajout dans la tree view -->

</odoo>
